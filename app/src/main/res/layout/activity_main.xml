        android:text="@string/selectedChord"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/fixedScaleText"
        app:layout_constraintTop_toTopOf="@+id/horizontalBorder" />

    <TextView
        android:id="@+id/infoSelectedScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="@string/noSelection"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fixedScaleText"
        app:layout_constraintTop_toBottomOf="@+id/fixedScaleText" />

    <TextView
        android:id="@+id/infoScaleNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="@string/noSelection"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/infoSelectedScale"
        app:layout_constraintTop_toBottomOf="@+id/infoSelectedScale" />

    <TextView
        android:id="@+id/infoSelectedChord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="@string/noSelection"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fixedChordText"
        app:layout_constraintTop_toBottomOf="@+id/fixedChordText" />

    <TextView
        android:id="@+id/infoChordNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="@string/noSelection"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/infoSelectedChord"
        app:layout_constraintTop_toBottomOf="@+id/infoSelectedChord" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundbutton"
        android:text="@string/quizButton"
        android:textColor="#22CABB"
        android:textSize="9sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/horizontalBorder"
        app:layout_constraintStart_toEndOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@+id/keys"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/enterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:text="@string/enter"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@+id/keys" />

    <TextView
        android:id="@+id/quizRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:text="@string/enterInitial"
        android:textColor="#DBE160"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/enterText"
        app:layout_constraintTop_toBottomOf="@+id/keys" />

    <TextView
        android:id="@+id/numCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="15dp"
        android:text="@string/initialAnswered"
        android:textColor="#DBE160"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/horizontalBorder"
        app:layout_constraintStart_toEndOf="@+id/completedText"
        app:layout_constraintTop_toBottomOf="@+id/inputText" />

    <TextView
        android:id="@+id/finalCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="15dp"
        android:text="@string/maxAnswered"
        android:textColor="#DBE160"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/horizontalBorder"
        app:layout_constraintStart_toEndOf="@+id/numCompleted"
        app:layout_constraintTop_toBottomOf="@+id/inputText" />

    <TextView
        android:id="@+id/completedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="15dp"
        android:text="@string/completed"
        android:textColor="#DBE160"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/horizontalBorder"
        app:layout_constraintStart_toEndOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@+id/inputText" />

    <TextView
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/userInput"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@id/enterText" />

    <TextView
        android:id="@+id/userInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#DBE160"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/inputText"
        app:layout_constraintTop_toBottomOf="@+id/fixedQuizTypeText" />

    <ImageView
        android:id="@+id/correctAnswer"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/correctAnswer"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@+id/keys"
        app:srcCompat="@drawable/checkmark" />

    <ImageView
        android:id="@+id/incorrectAnswer"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/incorrectAnswer"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@+id/keys"
        app:srcCompat="@drawable/xmark" />

    <SeekBar
        android:id="@+id/quizType"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="33dp"
        android:max="2"
        android:progress="0"
        android:translationX="-15dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalBorder"
        app:layout_constraintStart_toStartOf="@+id/fixedQuizTypeText"
        app:layout_constraintTop_toBottomOf="@+id/quizTypeText"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/quizDifficulty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="33dp"
        android:max="2"
        android:progress="0"
        android:translationX="-15dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalBorder"
        app:layout_constraintStart_toStartOf="@+id/fixedQuizDiffText"
        app:layout_constraintTop_toBottomOf="@+id/quizDiffText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fixedQuizTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/quizTypeText"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/verticalBorder"
        app:layout_constraintTop_toBottomOf="@+id/keys" />

    <TextView
        android:id="@+id/fixedQuizDiffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:text="@string/quizDiffText"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/fixedQuizTypeText"
        app:layout_constraintTop_toBottomOf="@+id/keys" />

    <TextView
        android:id="@+id/quizTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="@string/quizTypeScales"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/fixedQuizTypeText"
        app:layout_constraintTop_toBottomOf="@+id/fixedQuizTypeText" />

    <TextView
        android:id="@+id/quizDiffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="@string/quizDiffEasy"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/fixedQuizDiffText"
        app:layout_constraintTop_toBottomOf="@+id/fixedQuizDiffText" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/roundbutton"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/helpButton"
        android:textColor="#22CABB"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hideNotes"
        app:layout_constraintStart_toEndOf="@+id/hideSelection"
        app:layout_constraintTop_toBottomOf="@+id/horizontalBorder" />

</androidx.constraintlayout.widget.ConstraintLayout>